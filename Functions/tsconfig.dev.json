{
  "extends": "./tsconfig.json",  // Extending from your base tsconfig.json
  "compilerOptions": {
    "sourceMap": true,  // Enable source maps for better debugging (optional)
    "outDir": "./dist",  // Specify output directory for compiled JS files (optional)
    "rootDir": "./src"  // Specifies the root folder for the TypeScript source files
  },
  "include": [
    "src/**/*"  // Include all files in the 'src' folder and its subfolders
  ],
  "exclude": [
    "node_modules",  // Exclude the node_modules directory
    "dist"           // Exclude the output directory to avoid it being included in the compilation
  ]
}
